       <% if (typeof money !== 'undefined' && money !== false) { %>
         <div class="sidebar-header">
             <div style="display: flex; align-items: center; gap: 10px;">
                 <img src="/images/avatar.svg" alt="User">
                 <div>
                     <div><%= typeof username !== 'undefined' ? username : 'User' %></div>
                     <div style="font-size: 14px; color: #9CA3AF;">₹<%= typeof money === 'number' ? money.toLocaleString('en-IN') : money %></div>
                 </div>
             </div>
             <div class="close-btn" id="closeSidebar">×</div>
         </div>
         <a href='/wallet/recharge' class="menu-item">💰 DEPOSIT FUNDS</a>
         <a href='/wallet/withdrawal' class="menu-item">💵 WITHDRAW</a>
         <a href="/myProfile" class="menu-item">👤 PERSONAL DETAILS</a>
         <a href='/wallet/rechargerecord' class="menu-item">📄 TRANSACTION HISTORY</a>
