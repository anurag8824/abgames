             <div class="close-btn" id="closeSidebar">×</div>
         </div>
       <% } %>
  </div>


  <!-- ========================== -->
  <!-- Popup HTML Structure       -->
  <!-- ========================== -->
  <div id="loginPopupOverlay" class="popup-overlay">
    <div class="popup-content">
        <button class="popup-close-btn" id="closeLoginPopupBtn">×</button>
        <div id="authFormContainer"> <!-- Container for ALL forms -->

            <!-- 1. Login Form View -->
            <div id="loginFormView" class="form-view active">
                 <div class="login__container-form">
                    <div class="login_container-tab"><div class="tab active"><div class="font30 phonefont30active">Log In</div></div></div>
                    <div class="tab-content activecontent">
                        <div class="signIn__container">
                            <div class="phoneInput__container">
                                <div class="phoneInput__container-label"><img src="data:image/png;base64,..." class="phoneInput__container-label__icon"><span>Phone number</span></div>
                                <div class="phoneInput__container-input">
                                    <div class="dropdown"><div class="dropdown__value"><span>+91</span><i>▼</i></div></div>
                                    <input type="text" name="username" placeholder="Enter 10-digit number" required pattern="\d{10}" title="10-digit phone number">
                                </div>
                            </div>
                            <div class="passwordInput__container">
                                <div class="passwordInput__container-label"><img class="passwordInput__container-label__icon" src="/index_files/password-b827c2b3.png"><span>Password</span></div>
                                <div class="passwordInput__container-input">
                                    <input id="passwordfield" type="password" placeholder="Enter Password" required>
                                    <span class="eye" onclick="showPass('passwordfield', 'eyeicon')"><img id="eyeicon" src="/index_files/eyeInvisible-2fa5c152.png"></span>
                                </div>
                            </div>

                            <div class="signIn__container-remember">
                              <div class="van-checkbox login-checkbox checked" tabindex="0" aria-checked="true">
                                  <div class="van-checkbox__icon van-checkbox__icon--round van-checkbox__icon--checked"><i>✔</i></div>
                                  <span class="van-checkbox__label">Remember password</span>
                              </div>
                          </div>
                          <div class="signIn__container-button">
                            <button id="popupLoginSubmitBtn" style="border-radius: 30px;">Log in</button>
                          
                        </div>
                            <div class="forgetcon" style="align-items: center;">
                                <a class="switchToForgot">Forgot password?</a> <!-- Link to switch view -->
                            </div>
                          
                            <div class="alert-toast"></div>
                            <div class="signIn__container-button">
                               
                                <button class="switchToRegister" style="border-radius: 30px;">Create Account</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End loginFormView -->

            <!-- 2. Registration Form View -->
            <div id="registerFormView" class="form-view" style="display: none;">
