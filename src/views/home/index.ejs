                 if (!username || !password) { alertMessPopup("Please fill in all required fields."); return; }

                 console.log(username,password ,phone,"yjhkl;ghjklfghjknlmfghjknl")
                //  if (!/^\d{10}$/.test(username)) { alertMessPopup("Please enter a valid 10-digit phone number."); return; }
                //  if (!/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d@$!%*?&.\/]{8,}$/.test(password)) { alertMessPopup("Password must be 8+ chars with letters & numbers."); return; }
                //  if (!isChecked) { alertMessPopup("Please agree to the Privacy Agreement."); return; }
                 if ($loadingOverlay.length) $loadingOverlay.fadeIn(10);
                 $.ajax({ type: "POST", url: "/api/webapi/register", data: { username: phone, pwd: password, invitecode: invite ,name:username}, dataType: "json",
                     success: function (response) {
                         if (response.status === true) {
                             if ($loadingOverlay.length) $loadingOverlay.fadeOut(100); alertMessPopup(response.message || "Registration successful! Please login.");
                             setTimeout(() => { $registerView.fadeOut(150, function() { $(this).removeClass('active'); $loginView.find('input[name="username"]').val(username); $loginView.find('#passwordfield').val(''); $loginView.find('.alert-toast').empty().hide(); $loginView.fadeIn(150).addClass('active'); }); }, 2000);
