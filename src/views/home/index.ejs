                    else { clearInterval(otpInterval); $button.prop('disabled', false).removeClass('block-click').text('Send'); }
                }, 1000);

                $.ajax({ type: "POST", url: "/api/sent/otp/verify/reset", data: { phone: phone }, dataType: "json",
