        <% } else { %>
             <button id="openLoginPopupBtn" class="header-auth-btn" style="background-color: #ea580c; color:white">Login</button>
             <button id="openRegisterPopupBtn" class="header-auth-btn" style="background-color: #ea580c; color:white">Register</button>
        <% } %>
        <!-- <button id="openLoginPopupBtn" class="header-auth-btn" style="background-color: #0dbd18; color:white">Login</button>
        <button id="openRegisterPopupBtn" class="header-auth-btn" style="background-color: #ea580c; color:white">Register</button> -->
    </div>
  </div>

  <div class="support-btn" onclick="window.location.href='<%= typeof telegram !== 'undefined' ? telegram : '#' %>'">CUSTOMER SUPPORT</div>
