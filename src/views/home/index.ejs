            }
            // Clear previous alerts
            $authFormContainer.find('.alert-toast').empty().hide();
            // Clear form fields
            $authFormContainer.find('input[type="text"], input[type="password"], input[type="number"]').val('');
            // Reset checkboxes
            $authFormContainer.find('.van-checkbox').removeClass('checked').attr('aria-checked', 'false');
            $authFormContainer.find('.van-checkbox__icon').removeClass('van-checkbox__icon--checked');
            $authFormContainer.find('.van-checkbox__icon i').hide();
            $loginView.find('.login-checkbox').addClass('checked').attr('aria-checked', 'true');
            $loginView.find('.login-checkbox .van-checkbox__icon').addClass('van-checkbox__icon--checked');
            $loginView.find('.login-checkbox .van-checkbox__icon i').show();
             // Reset OTP button if present in forgot view
             $forgotPasswordView.find('#popupForgotOtpBtn').prop('disabled', false).removeClass('block-click').text('Send');
             // Clear any OTP intervals if necessary (get interval reference if needed)

            // Show overlay
            $loginPopupOverlay.css('display', 'flex').hide().fadeIn(250);
        }

        // --- Event Handlers for Opening/Closing ---
        if ($openLoginBtn.length) $openLoginBtn.on('click', function(e) { e.preventDefault(); openPopup('login'); });
        if ($openRegisterBtn.length) $openRegisterBtn.on('click', function(e) { e.preventDefault(); openPopup('register'); });
        if ($openLoginBtnPlay.length) $openLoginBtnPlay.on('click', function(e) { e.preventDefault(); openPopup('login'); });
        if ($closeLoginBtn.length) $closeLoginBtn.on('click', function() { $loginPopupOverlay.fadeOut(200); });
        if ($loginPopupOverlay.length) $loginPopupOverlay.on('click', function(event) { if ($(event.target).is($loginPopupOverlay)) { $loginPopupOverlay.fadeOut(200); }});

        // --- showPass Function ---
        window.showPass = function(inputId, iconId) {
            var visibleView = $authFormContainer.find('.form-view.active');
            var x = visibleView.find('#' + inputId)[0]; var y = visibleView.find('#' + iconId)[0];
            if (x && y) {
                if (x.type === "password") { x.type = "text"; y.src = "/index_files/eyeVisible-7bc1c956.png"; } // CHECK PATH
                else { x.type = "password"; y.src = "/index_files/eyeInvisible-2fa5c152.png"; } // CHECK PATH
            } else if (x) { console.warn("showPass: Eye icon #" + iconId + " not found."); }
               else { console.error("showPass: Input #" + inputId + " not found."); }
        }

        // --- alertMessPopup Function ---
        function alertMessPopup(text) {
            const $alertToast = $authFormContainer.find('.form-view.active .alert-toast');
            if ($alertToast.length === 0) { alert(text); return; } $alertToast.empty();
            const messageHtml = `<div class="msg"><div class="msg-content">${text}</div></div>`;
            $alertToast.append(messageHtml).hide().fadeIn(300);
        }

        // --- Cookie Functions ---
        function setCookie(cname, cvalue, exdays) { const d = new Date(); d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000)); let expires = "expires=" + d.toUTCString(); document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/"; }

        // --- View Switching Logic ---
        if ($authFormContainer.length && $loginView.length && $registerView.length && $forgotPasswordView.length) {
            // Switch to Register (from Login)
            $authFormContainer.on('click', '.switchToRegister', function(e) { e.preventDefault(); $loginView.fadeOut(150, function() { $(this).removeClass('active'); $registerView.find('.alert-toast').empty().hide(); $registerView.fadeIn(150).addClass('active'); }); });
            // Switch to Login (from Register or Forgot)
            $authFormContainer.on('click', '.switchToLogin', function(e) { e.preventDefault(); var $currentView = $(this).closest('.form-view'); $currentView.fadeOut(150, function() { $(this).removeClass('active'); $loginView.find('.alert-toast').empty().hide(); $loginView.fadeIn(150).addClass('active'); }); });
             // Switch to Forgot Password (from Login)
             $authFormContainer.on('click', '.switchToForgot', function(e) { e.preventDefault(); $loginView.fadeOut(150, function() { $(this).removeClass('active'); $forgotPasswordView.find('.alert-toast').empty().hide(); $forgotPasswordView.fadeIn(150).addClass('active'); }); });
        }

        // --- Checkbox Logic ---
        if ($authFormContainer.length) {
             $authFormContainer.on('click', '.van-checkbox', function(e) {
                 e.preventDefault(); var $checkbox = $(this); var $icon = $checkbox.find('.van-checkbox__icon i'); var $iconContainer = $checkbox.find('.van-checkbox__icon');
                 if ($checkbox.hasClass('checked')) { $checkbox.removeClass('checked').attr('aria-checked', 'false'); $iconContainer.removeClass('van-checkbox__icon--checked'); $icon.hide(); }
                 else { $checkbox.addClass('checked').attr('aria-checked', 'true'); $iconContainer.addClass('van-checkbox__icon--checked'); $icon.show(); }
             });
        }

        // --- LOGIN SUBMISSION LOGIC ---
        const $loginSubmitBtn = $('#popupLoginSubmitBtn');
        if ($loginSubmitBtn.length && $loginView.length) {
             $loginSubmitBtn.on('click', function(e) {
                 e.preventDefault(); $loginView.find('.alert-toast').empty().hide();
                 let username = $loginView.find('input[name="username"]').val()?.trim(); let password = $loginView.find('#passwordfield').val()?.trim();
                 if (!username || !password) { alertMessPopup("Phone number and password are required!"); return; }
                 if (!/^\d{10}$/.test(username)) { alertMessPopup("Please enter a valid 10-digit phone number."); return; }
                 if ($loadingOverlay.length) $loadingOverlay.fadeIn(10);
                 $.ajax({ type: "POST", url: "/api/webapi/login", data: { username: username, pwd: password }, dataType: "json",
                     success: function (response) {
                         if (response.status === true) { setCookie('token', response.token, 1); setCookie('auth', response.value, 1); if ($loadingOverlay.length) $loadingOverlay.fadeOut(100); $loginPopupOverlay.fadeOut(200, function() { window.location.reload(); }); }
                         else { if ($loadingOverlay.length) $loadingOverlay.fadeOut(300); alertMessPopup(response.message || "Invalid credentials."); }
