  <!-- =============================== -->
  <!-- Existing Home Page Content      -->
  <!-- =============================== -->
  <div class="header">
    <img src="/images/banners/logo.png" alt="Aviator Logo">
    <div class="header-buttons">
        <% if (typeof money !== 'undefined' && money === false) { %>
          <button id="openLoginPopupBtn" class="header-auth-btn" style="background-color: #ea580c; color:white">Login</button>
          <button id="openRegisterPopupBtn" class="header-auth-btn" style="background-color: #ea580c; color:white">Register</button>
        <% } else if (typeof money !== 'undefined') { %>
          <div class="deposit-btn" onclick="window.location.href='/wallet/recharge'">₹ <%= typeof money === 'number' ? money.toLocaleString('en-IN') : money %> DEPOSIT</div>
